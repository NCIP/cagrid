<ivysettings>
	<settings defaultResolver="remote-caGrid-ivy-resolver" />
	
	<caches checkUpToDate="false" useOrigin="true" defaultCacheDir="${cache}"/>
	
	<resolvers>
		<url name="remote-caGrid-ivy-resolver">
			<ivy pattern="http://software.cagrid.org/repository-1.5/[organisation]/[module]/ivy-[revision].xml" />
			<artifact pattern="http://software.cagrid.org/repository-1.5/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			<artifact pattern="http://software.cagrid.org/repository-1.5/[organisation]/[module]/[revision]/[artifact].[ext]" />
		</url>		
	</resolvers>	
</ivysettings>
