	<target name="runGUI" depends="compile" description="Execute the GUI: runGUI">
		<java classname="gov.nih.nci.cagrid.workflow.client.WorkflowSubmissionGUI" fork="yes">
			<classpath refid="service.run.classpath" />
		</java>
	</target>

	<target name="ui" depends="compile" description="Runs the workflow submission UI.">
		<java classname="org.cagrid.grape.GridApplication" fork="yes">
			<arg value="etc/workflow-submission-ui.xml" />
			<classpath refid="service.run.classpath" />
		</java>
	</target>
	<target name="deployGlobusHandler" depends="handlerjar" description="This is used to overwrite activebpels' client-config.wsdd with our client-config and deploys the globus authz handler jar and cog-axis.jar into $CATALINA_HOME/shared/lib so workflows invoking secure services work">
		<copy overwrite="true" todir="${tomcat.dir}/shared/lib/" file="${build.lib.dir}/globus-authz.jar" />
		<copy overwrite="true" todir="${tomcat.dir}/shared/classes" file="etc/ae-client-config.wsdd" />
		<copy overwrite="true" todir="${tomcat.dir}/bpr/" file="etc/aeEngineConfig.xml" />
		<copy overwrite="true" todir="${tomcat.dir}/shared/lib" file="${ext.globus.dir}/lib/cog-axis.jar" />
		<copy overwrite="true" todir="${tomcat.dir}/shared/lib" file="${ext.globus.dir}/lib/cog-jglobus.jar" />
	</target>

	<target name="handlerjar" depends="compile">
		<jar destfile="${build.lib.dir}/globus-authz.jar" basedir="${build.dest}" includes="**/SimpleGlobusAuthorizationHandler.class" />
	</target>

	<target name="runTests" depends="checkGlobus" description="Runs the service's tests.">
		<echo message="Test results dir: ${junit.results.dir}" />
		<mkdir dir="${junit.results.dir}" />
		<junit dir="${basedir}" printsummary="yes" showoutput="true">
			<classpath refid="test.run.classpath" />
			<formatter type="xml" />
			<batchtest fork="yes" todir="${junit.results.dir}">
				<fileset dir="${test.src.dir}">
					<include name="**/PackageTests.java" />
				</fileset>
			</batchtest>
		</junit>
	</target>

	<target name="configure-bpel-admin-web-xml">

	  <property name="bpel.admin.role" value="admin"/>
	  <echo message="CATALINA_HOME is set to : ${tomcat.home}" />
	  <property name="config.file"
		    value="${tomcat.home}/webapps/BpelAdmin/WEB-INF/web.xml" />
	  <xmltask source="${config.file}" dest="${config.file}" preservetype="true">
	    <xmlcatalog refid="installer.catalog"/>    
	    <remove path="/web-app/security-constraint" />
	    <remove path="/web-app/login-config" />
	    <remove path="/web-app/security-role" />
	    <insert path="/web-app">
<![CDATA[
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>BpelAdmin</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>${bpel.admin.role}</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>DIGEST</auth-method>
  </login-config>
  <security-role>
    <role-name>${bpel.admin.role}</role-name>
  </security-role>
  ]]>
      </insert>
    </xmltask>

	</target>

	<target name="create-bpel-admin-context">
  
	  <!-- TODO: handle virutal hosts and other engines -->
	  <echo message="CATALINA_HOME is set to : ${tomcat.home}" />
	  
	  <property name="context.file" value="${tomcat.home}/conf/Catalina/localhost/BpelAdmin.xml"/>
	  <delete file="${context.file}"/>
	  <touch mkdirs="true" file="${context.file}"/>
	  <concat destfile="${context.file}"><![CDATA[<?xml version='1.0' encoding='utf-8'?>
<Context reloadable="false" displayName="ActiveBPEL Administrative Console" path="/BpelAdmin">
  <Realm className="org.apache.catalina.realm.MemoryRealm"
	 pathname="conf/BpelAdmin-users.xml"/>
</Context>
]]>
	  </concat>
	  
	</target>

	<target name="create-bpel-admin-users">
	  
	  <echo message="CATALINA_HOME is set to : ${tomcat.home}" />
	  <property name="users.file" value="${tomcat.home}/conf/BpelAdmin-users.xml"/>
	  <property name="bpel.admin.role" value="admin"/>
	  <property name="bpel.admin.username" value="changeMe"/>
	  <property name="bpel.admin.password" value="changeMe"/>
	  <delete file="${users.file}"/>
	  <touch mkdirs="true" file="${users.file}"/>
	  <concat destfile="${users.file}"><![CDATA[<tomcat-users>
 <user name="${bpel.admin.username}" 
       password="${bpel.admin.password}" 
       roles="${bpel.admin.role}"/>
	    </tomcat-users>
	    ]]>
	  </concat>
	  
	</target>
</project>
