<grid-portal>
	<resource name="GridPortalConfig" class="org.projectmobius.portal.GridPortalConfig">
	 <grid-portal-config>
	  <application>
	  	<name>Dorian</name>
	  	<icon>/applications-internet.png</icon>
	  	<about>
	  	     <![CDATA[<html><h2>Dorian</h2><h3>Authors:</h3><a href="mailto:hastings@bmi.osu.edu">Shannon Hastings</a> and <a href="mailto:langella@bmi.osu.edu">Stephen Langella</a> and <a href="mailto:oster@bmi.osu.edu">Scott Oster</a>]]>	
	  	</about>
	  	<dimensions>
	  		<width>850</width>
	  		<height>700</height>
	  	</dimensions>
	  </application>
	  <components>
	        <component>
	  		<title>Login</title>
	  		<description>Authenticate with Credential Provider or Identity Provider</description>
	  		<class>gov.nih.nci.cagrid.dorian.ui.ifs.CreateProxyComponent</class>
	  		<icon>/Door.gif</icon>
	  		<dimensions>
	  			<width>550</width>
	  			<height>350</height>
	  		</dimensions>
	  	</component>
	    	<component>
	  		<title>Grid Account Management</title>
	  		<description>Identity Provider (IdP) Menu</description>
	  		<class>gov.nih.nci.cagrid.dorian.ui.ifs.IFSMenu</class>
	  		<icon>/applications-internet.png</icon>
	  		<dimensions>
	  			<width>300</width>
	  			<height>300</height>
	  		</dimensions>
	  	</component>
	  	<component>
	  		<title>Local Account Management</title>
	  		<description>Identity Provider (IdP) Menu</description>
	  		<class>gov.nih.nci.cagrid.dorian.ui.idp.IdPMenu</class>
	  		<icon>/system-users.png</icon>
	  		<dimensions>
	  			<width>250</width>
	  			<height>200</height>
	  		</dimensions>
	  	</component>
	  
	  </components>
	  </grid-portal-config>
	</resource>	
	<resource name="DorianUIConf" class="gov.nih.nci.cagrid.dorian.ui.DorianUIConf">
		<dorian-portal-config>
		<dorian-services>
			<dorian-service>https://cagrid-dorian.nci.nih.gov:8443/wsrf/services/cagrid/Dorian</dorian-service>
			<dorian-service>https://localhost:8443/wsrf/services/cagrid/Dorian</dorian-service>
		</dorian-services>
		<idps>
			<idp name="cagrid-dorian.nci.nih.gov Dorian  IdP" authPanelClass="gov.nih.nci.cagrid.dorian.ui.ifs.AuthenticationServicePanel">
				<parameters>
					<parameter name="serviceId" value="https://cagrid-dorian.nci.nih.gov:8443/wsrf/services/cagrid/Dorian"/>
				</parameters>
			</idp>
			
			<idp name="cagrid-auth IDP" authPanelClass="gov.nih.nci.cagrid.dorian.ui.ifs.AuthenticationServicePanel">
				<parameters>
					<parameter name="serviceId" value="https://cagrid-auth.nci.nih.gov:8443/wsrf/services/cagrid/AuthenticationService"/>
				</parameters>
			</idp>
			
			<idp name="Localhost Dorian IdP" authPanelClass="gov.nih.nci.cagrid.dorian.ui.ifs.AuthenticationServicePanel">
				<parameters>
					<parameter name="serviceId" value="https://localhost:8443/wsrf/services/cagrid/Dorian"/>
				</parameters>
			</idp>
		</idps>
        </dorian-portal-config>
	</resource>
</grid-portal>
